<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Manejar encabezados de autorización y seguridad
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirigir si hay una barra al final, pero no es un directorio
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # **Servir archivos estáticos de Angular si existen**
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # **Redirigir todo lo que no sea un archivo o directorio real a Angular**
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ /index.html [L]

    # **Si no es manejado por Angular, pasar a Laravel**
    RewriteCond %{REQUEST_URI} !^/api/.*$  # Excluir rutas API de Laravel
    RewriteCond %{REQUEST_URI} !^/storage/.*$ # Excluir archivos de storage
    RewriteCond %{REQUEST_URI} !^/public/.*$ # Excluir archivos públicos
    RewriteRule ^ index.php [L]
</IfModule>
